<Application x:Class="SlideshowCreator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SlideshowCreator"
             Startup="Application_Startup">
    
    <Application.Resources>
        <ResourceDictionary>
            <!-- Merged resource bundle for all Resources files -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/styles/DefaultStyle.xaml" />
                <ResourceDictionary Source="/Resources/styles/Menu.xaml" />
                <ResourceDictionary Source="/Resources/styles/Button.xaml" />
                <ResourceDictionary Source="/Resources/styles/Progressbar.xaml" />
                <ResourceDictionary Source="/Resources/styles/Scrollbar.xaml" />
                <ResourceDictionary Source="/Resources/styles/Tabcontrol.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
