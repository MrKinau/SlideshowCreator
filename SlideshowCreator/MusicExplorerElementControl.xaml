<UserControl x:Class="SlideshowCreator.MusicExplorerElementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SlideshowCreator"
             mc:Ignorable="d"
             MaxHeight="100" MaxWidth="100">
    <Grid>
        <Border CornerRadius="10" BorderThickness="0" Background="DarkMagenta" Width="100" Height="100"/>
        <Image x:Name="Image" Source="pack://application:,,,/Resources/icons/musicThumbnail.png" MaxWidth="60" MaxHeight="60"/>
        <TextBlock x:Name="TextBlock" TextWrapping="NoWrap" Margin="1,80,0,1" VerticalAlignment="Center" HorizontalAlignment="Left" />
    </Grid>
</UserControl>
