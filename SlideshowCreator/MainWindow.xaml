<Window x:Class="SlideshowCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlideshowCreator"
        xmlns:osc="clr-namespace:OpenSourceControls;assembly=DockPanelSplitter"
        mc:Ignorable="d"
        Title="SlideShow Creator" Height="700" Width="800" WindowStartupLocation="CenterScreen" SizeChanged="Window_SizeChanged">

    <DockPanel x:Name="rootPanel" HorizontalAlignment="Stretch" LastChildFill="True" Background="#FFE4F1E5">

        <Menu x:Name="menu" DockPanel.Dock="Top" Background="White">
            <MenuItem x:Name="fileMenuItem" Header="File"  FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center">

            </MenuItem>
            <MenuItem x:Name="editMenuItem" Header="Edit" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center">

            </MenuItem>
            <MenuItem x:Name="helpMenuItem" Header="Help"  FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center">

            </MenuItem>
        </Menu>

        <DockPanel x:Name="timelinePanel" DockPanel.Dock="Bottom" MinHeight="120" MaxHeight="300" Margin="10,0,10,10">
            <Border x:Name="timelineControls" DockPanel.Dock="Left" BorderBrush="#FF262829" BorderThickness="1" Background="#FF3C3F41" Width="150"/>
            <local:TimelineControl x:Name="timeline" DockPanel.Dock="Right" SizeChanged="Timeline_SizeChanged" />
        </DockPanel>
        <osc:DockPanelSplitter DockPanel.Dock="Bottom" Background="#FF7A7A7A" Margin="0,0,0,5" Height="2"/>

      <TabControl x:Name="pictureExplorerPanel" DockPanel.Dock="Left"  BorderBrush="Black" BorderThickness="2" Margin="10,10,10,10"  Width="350">
            <TabItem x:Name="pictures" Header="Pictures"/>
            <TabItem x:Name="music" Header="Music"/>
        </TabControl>

        <DockPanel x:Name="previewPanel" DockPanel.Dock="Right" Margin="0,32,10,10">
            <Border x:Name="finishButton" DockPanel.Dock="Bottom" BorderBrush="#FF0808C7" BorderThickness="2" Background="#FF5630FF" Height="50" />
            <Border x:Name="preview" DockPanel.Dock="Top" BorderBrush="#FF75993F" BorderThickness="2" Background="#FF279D2D" Margin="0, 0, 0, 20" />
        </DockPanel>

    </DockPanel>
</Window>
