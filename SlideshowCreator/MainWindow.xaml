<Window x:Class="SlideshowCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlideshowCreator"
        mc:Ignorable="d"
        Title="SlideShow Creator" Height="700" Width="800" WindowStartupLocation="CenterScreen" SizeChanged="Window_SizeChanged">

    <DockPanel HorizontalAlignment="Stretch" LastChildFill="True" Background="#FFE4F1E5">

        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="File"  FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center">
                <MenuItem Header="New Projekt">
                    <MenuItem Header="Collage"/>
                    <MenuItem Header="Image"/>
                </MenuItem>
                <MenuItem Header="Open"/>
                <MenuItem Header="Add">
                    <MenuItem Header="Image"/>
                    <MenuItem Header="Music"/>
                </MenuItem>
                <MenuItem Header="Save"/>
                <MenuItem Header="Save As"/>
                <MenuItem Header="Export/Create"/>
                <MenuItem Header="Share on">
                    <MenuItem Header="Facebook"/>
                    <MenuItem Header="Youtube"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Edit" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center">
                <MenuItem Header="Add Effekt"/>
                <MenuItem Header="Edit Transition"/>
                <MenuItem Header="Edit Picture"/>
                <MenuItem Header="Add Empty File"/>
                <MenuItem Header="Add Text"/>
                <MenuItem Header="Endo"/>
                <MenuItem Header="Redo"/>

            </MenuItem>
            <MenuItem Header="Help"  FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center">
                <MenuItem Header="Help"/>
                <Separator/>
                <MenuItem Header="About us"/>
            </MenuItem>
        </Menu>

        <DockPanel DockPanel.Dock="Bottom" Margin="10,0,10,10">
            <Grid DockPanel.Dock="Left" Height="106" Background="#FF6A6A6A" Width="150"/>
            <Border DockPanel.Dock="Right" BorderBrush="Black" BorderThickness="1" Height="106" Background="Black"/>
        </DockPanel>

        <TabControl x:Name="pictureExplorer" DockPanel.Dock="Left"  BorderBrush="Black" BorderThickness="2" Margin="10,10,10,10"  Width="350">
            <TabItem Header="Pictures">
                <DockPanel>
                    <Grid DockPanel.Dock="Bottom" Margin="5,5,5,5" Height="74" RenderTransformOrigin="0.5,0.5" Background="#FFCFD032">
                        <Button x:Name="Add_Img" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="5,5,5,5" Height="29" Click="Add_Img_Click"/>


                    </Grid>
                    <Grid x:Name="Picture_Holder" DockPanel.Dock="Top"  Margin="5,5,5,5" Background="#FFA59A9A">
                        <Image Margin="2,2,2,2" Name="Image1" Stretch="Fill"/>
                    </Grid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Music"/>
        </TabControl>

        <DockPanel DockPanel.Dock="Right" Margin="0,32,10,10">
            <Border DockPanel.Dock="Bottom" BorderBrush="#FF0808C7" BorderThickness="2" Background="#FF5630FF" Height="50" />
            <Border x:Name="preview" DockPanel.Dock="Top" BorderBrush="#FF75993F" BorderThickness="2" Background="#FF279D2D" Margin="0, 0, 0, 20" />
        </DockPanel>

    </DockPanel>
</Window>
