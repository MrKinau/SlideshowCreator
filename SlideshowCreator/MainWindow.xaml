<Window x:Class="SlideshowCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlideshowCreator"
        xmlns:osc="clr-namespace:OpenSourceControls;assembly=DockPanelSplitter"
        mc:Ignorable="d"
        Title="SlideShow Creator" Height="700" Width="800" WindowStartupLocation="CenterScreen" SizeChanged="Window_SizeChanged">

    <DockPanel x:Name="rootPanel" HorizontalAlignment="Stretch" LastChildFill="True" Background="#FF3C3F41">

        <Menu x:Name="menuPanel" DockPanel.Dock="Top" Background="#FF3C3F41">
            <MenuItem Header="File"  FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center">
                <MenuItem Header="New Projekt">
                    <MenuItem Header="Collage"/>
                    <MenuItem Header="Image"/>
                </MenuItem>
                <MenuItem Header="Open"/>
                <MenuItem Header="Add">
                    <MenuItem Header="Image"/>
                    <MenuItem Header="Music"/>
                </MenuItem>
                <MenuItem Header="Save"/>
                <MenuItem Header="Save As"/>
                <MenuItem Header="Export/Create"/>
                <MenuItem Header="Share on">
                    <MenuItem Header="Facebook"/>
                    <MenuItem Header="Youtube"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Exit" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Edit" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center">
                <MenuItem Header="Add Effekt"/>
                <MenuItem Header="Edit Transition"/>
                <MenuItem Header="Edit Picture"/>
                <MenuItem Header="Add Empty File"/>
                <MenuItem Header="Add Text"/>
                <MenuItem Header="Endo"/>
                <MenuItem Header="Redo"/>

            </MenuItem>
            <MenuItem Header="Help"  FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center">
                <MenuItem Header="Help"/>
                <Separator/>
                <MenuItem Header="About us"/>
            </MenuItem>
        </Menu>
        <Border DockPanel.Dock="Top" Background="#FF262829" Height="1"/>

        <DockPanel Background="#FF3C3F41" x:Name="timelinePanel" DockPanel.Dock="Bottom" MinHeight="130" MaxHeight="300" Margin="10,0,10,10">
            <StackPanel Width="150" DockPanel.Dock="Left" x:Name="timelineControls" Orientation="Vertical" Margin="0" VerticalAlignment="Center">
                <Button x:Name="addTestElement" Content="add Test Element" Margin="10,10,10,5" Click="AddTestElement_Click"/>
                <Button x:Name="packButton" Content="pack" Margin="10,5" VerticalAlignment="Center" Click="PackButton_Click"/>
                <Button x:Name="lsdButton" Content="LSD" Margin="10,5" VerticalAlignment="Center" Click="LsdButton_Click"/>
                <Button Content="placeholder" Margin="10,5,10,10" VerticalAlignment="Center"/>

            </StackPanel>
            <local:TimelineControl x:Name="timeline" DockPanel.Dock="Right" SizeChanged="Timeline_SizeChanged" />
        </DockPanel>
        <osc:DockPanelSplitter x:Name="timelineSplitter" DockPanel.Dock="Bottom" Margin="0,0,0,10" Height="5">
            <osc:DockPanelSplitter.Background>
                <SolidColorBrush Color="#FF7A7A7A" Opacity="0.2"/>
            </osc:DockPanelSplitter.Background>
        </osc:DockPanelSplitter>

        <TabControl x:Name="pictureExplorerPanel" DockPanel.Dock="Left"  BorderBrush="Black" BorderThickness="2" Margin="10,10,10,10"  Width="350">
            <TabItem Header="Pictures">
                <DockPanel>
                    <Grid DockPanel.Dock="Bottom" Margin="5,5,5,5" Height="74" RenderTransformOrigin="0.5,0.5" Background="#FFCFD032">
                        <Button x:Name="Add_Img" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="5,5,5,5" Height="29" Click="Add_Img_Click"/>


                    </Grid>
                    <Grid x:Name="Picture_Holder" DockPanel.Dock="Top"  Margin="5,5,5,5" Background="#FFA59A9A">
                        <Image Margin="2,2,2,2" Name="Image1" Stretch="Fill"/>
                    </Grid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Music"/>
        </TabControl>
        <osc:DockPanelSplitter x:Name="pictureExplorerSplitter" DockPanel.Dock="Left" Margin="0,0,10,0" Width="5" Foreground="{x:Null}">
            <osc:DockPanelSplitter.Background>
                <SolidColorBrush Color="#FF7A7A7A" Opacity="0.2"/>
            </osc:DockPanelSplitter.Background>
        </osc:DockPanelSplitter>


        <DockPanel x:Name="previewPanel" DockPanel.Dock="Right" Margin="0,32,10,10">
            <Border x:Name="finishButton" DockPanel.Dock="Bottom" BorderBrush="#FF0808C7" BorderThickness="2" Background="#FF5630FF" Height="50" />
            <Border x:Name="preview" DockPanel.Dock="Top" BorderBrush="#FF75993F" BorderThickness="2" Background="#FF279D2D" Margin="0, 0, 0, 20" />
        </DockPanel>

    </DockPanel>
</Window>
