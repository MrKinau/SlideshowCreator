        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="106" VerticalAlignment="Top" Width="527" Margin="227,570,0,0">
            <Grid Margin="0.2,0.2,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="22*"/>
                    <ColumnDefinition Width="509*"/>
