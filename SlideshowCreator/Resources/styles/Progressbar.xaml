<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Progressbar -->
    <Style x:Key="{x:Type ProgressBar}" TargetType="{x:Type ProgressBar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid MinHeight="14" MinWidth="200">
                        <Border x:Name="PART_Track" CornerRadius="5" BorderThickness="1" Background="{DynamicResource SC_BG_COLOR_DARK}"/>
                        <Border x:Name="PART_Indicator" CornerRadius="5" HorizontalAlignment="Left" Background="{DynamicResource SC_BG_COLOR_BRIGHT}" BorderBrush="Transparent" BorderThickness="3"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>