<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SlideshowCreator.Resources.styles">
    <!-- Colors -->
    <SolidColorBrush x:Key="SC_BG_COLOR" Color="#FF3C3F41"/>
    <SolidColorBrush x:Key="SC_BG_COLOR_DARK" Color="#FF232526"/>
    <SolidColorBrush x:Key="SC_FG_COLOR" Color="White"/>

    <!-- Default style -->
    <Style x:Key="DefaultStyle" TargetType="Control">
        <Setter Property="Background" Value="{DynamicResource SC_BG_COLOR}" />
        <Setter Property="Foreground" Value="{DynamicResource SC_FG_COLOR}" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <Style x:Key="{x:Static MenuItem.SeparatorStyleKey}" TargetType="Separator">
        <Setter Property="Height" Value="1" />
        <Setter Property="Margin" Value="7,4,7,4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Border BorderBrush="{DynamicResource SC_FG_COLOR}" BorderThickness="1" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>