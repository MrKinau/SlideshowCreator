<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Colors -->
    <SolidColorBrush x:Key="SC_BG_COLOR" Color="#FF3C3F41"/>
    <SolidColorBrush x:Key="SC_BG_COLOR_DARK" Color="#FF181a1b"/>
    <SolidColorBrush x:Key="SC_BG_COLOR_BRIGHT" Color="#FF788187"/>

    <SolidColorBrush x:Key="SC_FG_COLOR" Color="White"/>

    <!-- Default style -->
    <Style x:Key="DefaultStyle" TargetType="Control">
        <Setter Property="Background" Value="{DynamicResource SC_BG_COLOR}" />
        <Setter Property="Foreground" Value="{DynamicResource SC_FG_COLOR}" />
        <Setter Property="FontSize" Value="13" />
    </Style>
</ResourceDictionary>