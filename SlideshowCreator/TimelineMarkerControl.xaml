<UserControl x:Class="SlideshowCreator.TimelineMarkerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SlideshowCreator"
             mc:Ignorable="d" >
    <Canvas>
        <Line x:Name="markerLine" X1="5" Y1="10" X2="5" Y2="100" Stroke="{DynamicResource SC_TL_MARKER_COLOR}" StrokeThickness="2"/>
        <Polygon Points="0,0 0,8, 5,13 10,8 10,0" Fill="{DynamicResource SC_TL_MARKER_COLOR}" Stroke="{DynamicResource SC_TL_MARKER_COLOR_DARK}" StrokeThickness="1"/>
    </Canvas>
</UserControl>
